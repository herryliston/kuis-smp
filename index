  <h3>Saran Jawaban Essay</h3>
  <ol id="essaySuggestions">
    <li><strong>31)</strong> My best friend is tall and slim. She has long straight hair. She always wears a blue jacket.</li>
    <li><strong>32)</strong><br>
      A: I’m sorry for being late.<br>
      B: It’s okay, please sit down.
    </li>
    <li><strong>33)</strong> My brother is tall. He wears glasses every day.</li>
    <li><strong>34)</strong> Sinta is slim. She has long and straight hair.</li>
    <li><strong>35)</strong><br>
      A: Thank you very much for your help.<br>
      B: You’re welcome.
    </li>
  </ol>
</div>


      <div style="height:12px"></div>

      <details open>
        <summary>Jawaban yang seharusnya</summary>
        <table id="answerTable">
          <thead>
            <tr><th>No.</th><th>Kunci Jawaban</th><th>Jawaban Kamu</th></tr>
          </thead>
          <tbody></tbody>
        </table>
      </details>
    </section>
  </main>

  <script>
    // Kunci jawaban (berdasarkan soal di atas)
    const KEY = {
      1:'A', 2:'C', 3:'A', 4:'B', 5:'A', 6:'A', 7:'C', 8:'B', 9:'A', 10:'C',
      11:'B', 12:'D', 13:'B', 14:'A', 15:'C', 16:'A', 17:'D', 18:'B', 19:'C', 20:'B',
      21:'B', 22:'A', 23:'D', 24:'B', 25:'C', 26:'A', 27:'B', 28:'C', 29:'D', 30:'B'
    };

    const quiz = document.getElementById('quiz');
    const submitBtn = document.getElementById('submitBtn');
    const resetBtn = document.getElementById('resetBtn');
    const result = document.getElementById('result');
    const scoreEl = document.getElementById('score');
    const correctEl = document.getElementById('correct');
    const wrongEl = document.getElementById('wrong');
    const tableBody = document.querySelector('#answerTable tbody');

    function getChoiceText(qNo, letter){
      if(!letter) return '';
      const block = document.querySelector('.q[data-q="'+qNo+'"]');
      const label = block && block.querySelector('input[name="q'+qNo+'"][value="'+letter+'"]').closest('label');
      return label ? label.textContent.trim() : letter;
    }

    function evaluate(){
      let correct = 0; let total = Object.keys(KEY).length; 
      tableBody.innerHTML = '';

      for(const [qStr, key] of Object.entries(KEY)){
        const qNo = Number(qStr);
        const sel = quiz.querySelector('input[name="q'+qNo+'\"]:checked');
        const ans = sel ? sel.value : '-';
        if(ans === key) correct++;

        const row = document.createElement('tr');
        const tdNo = document.createElement('td'); tdNo.textContent = qNo; row.appendChild(tdNo);
        const tdKey = document.createElement('td'); tdKey.textContent = key + '. ' + getChoiceText(qNo, key).replace(/^\w\.\s*/, ''); row.appendChild(tdKey);
        const tdYou = document.createElement('td'); tdYou.textContent = ans === '-' ? '(kosong)' : ans + '. ' + getChoiceText(qNo, ans).replace(/^\w\.\s*/, ''); row.appendChild(tdYou);
        tableBody.appendChild(row);
      }

      const wrong = total - correct;
      const score = (correct/total*100).toFixed(2);

      scoreEl.textContent = score;
      correctEl.textContent = correct;
      wrongEl.textContent = wrong;

      result.style.display = 'block';
      result.scrollIntoView({behavior:'smooth'});
    }

    submitBtn.addEventListener('click', evaluate);
    resetBtn.addEventListener('click', ()=>{
      result.style.display = 'none';
      tableBody.innerHTML = '';
      scoreEl.textContent = '0';
      correctEl.textContent = '0';
      wrongEl.textContent = '0';
      window.scrollTo({top:0, behavior:'smooth'});
    });
  </script>
</body>
</html>
